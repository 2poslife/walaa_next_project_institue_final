# ============================================
# Supabase Configuration
# ============================================
# Get these from: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# JWT Configuration
# ============================================
# Generate random secrets (use https://randomkeygen.com/ or PowerShell command)
JWT_SECRET=your_random_secret_key_here_min_32_characters
JWT_REFRESH_SECRET=your_random_refresh_secret_key_here_min_32_characters

# Token expiration times (optional - defaults shown)
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# App Configuration
# ============================================
# Your app URL (for development use localhost, for production use your domain)
NEXT_PUBLIC_APP_URL=http://localhost:3000

NEXT_PUBLIC_GROUP_PRICING_MODE=default  # or 'tiers'